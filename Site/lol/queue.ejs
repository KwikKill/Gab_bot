<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>

</head>

<body>

  <%- include('../partials/header', {variant:'queue'}); %>

  <!-- Home Section -->

  <% if(data != undefined) { %>
  <section id="home">
    <div class="container">
      <div class="row">

        <div class="col-md-12 col-sm-12">
          <h2>
            <% 
            let count = 1;
            let number = "";
            jsclient.lol.queue.updates.forEach(function(update) {
                if(update.discordid == data.id) {
                    if(number !== "") {
                        number += ", ";
                    }
                    number += count;
                }
                count += 1
            });
            %>
            <% if(number != undefined && number != null) { %>
            You are <%= number %> in the queue.
            <% } else { %>
            You are not in the queue.
            <% } %>
          </h2>
        </div>
      </div>
    </div>
  </section>
  <% }%>

  <div class="scrollmenu" id="table">
    <table>
      <!--<caption>Tableau stats lol</caption>-->
      <thead>
        <tr>
          <th scope="col">username</th>
          <th scope="col">count</th>
          <th scope="col">total</th>
        </tr>
      </thead>
      <tbody>
        <% jsclient.lol.queue.updates.forEach(function(update) {%>
        <tr <% if(update.discordid == data.id) { %> style="border: 3px solid darkgreen;" <% } %>>
          <td>
            <%= update.username %>
          </td>
          <td>
            <%= update.count %>
          </td>
          <td>
            <%= update.total %>
          </td>
        </tr>
        <% });%>
      </tbody>
      <!--
            <tfoot>
                <tr>
                    <th scope="row" colspan="2">Accounts number :</th>
                    <td colspan="2">3</td>
                </tr>
            </tfoot>
            -->
    </table>
  </div>

  <!-- Footer Section -->

  <footer>
    <%- include('../partials/footer'); %>
  </footer>


  <!-- SCRIPTS -->

  <script src="/js/jquery.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/custom.js"></script>

</body>

</html>